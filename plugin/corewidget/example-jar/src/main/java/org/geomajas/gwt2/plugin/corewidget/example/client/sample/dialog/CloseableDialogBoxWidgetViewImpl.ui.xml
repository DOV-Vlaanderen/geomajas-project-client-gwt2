<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cdc="urn:import:org.geomajas.gwt2.plugin.corewidget.example.client.sample.dialog.caption">

	<ui:with field="resource" type="org.geomajas.gwt2.plugin.corewidget.example.client.sample.dialog.resource.CloseableDialogBoxWidgetResource" />

	<g:DialogBox styleName="{resource.css.closeableDialogBox}">

		<g:customCaption>

			<cdc:CloseableDialogBoxCaption ui:field="customCaption" />

		</g:customCaption>

		<g:ScrollPanel ui:field="contentScrollPanel">

			<!-- Content will be added here by using widget.addContent(Widget widget) -->

		</g:ScrollPanel>

	</g:DialogBox>

</ui:UiBinder>