<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:with field='resource' type='org.geomajas.gwt2.example.base.client.resource.ShowcaseResource' />
	<ui:with field='messages' type='org.geomajas.gwt2.widget.example.client.i18n.SampleMessages' />

	<ui:style>
		.button {
			width: 200px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" width="100%" height="100%">
		<g:west size="300">
			<g:VerticalPanel addStyleNames="{resource.css.sampleLeftLayout}" spacing="10">
				<g:Button ui:field="infoMessageBtn" addStyleNames="{style.button}" text="{messages.messageBoxInfoMessageBtn}" />
				<g:Button ui:field="warnMessageBtn" addStyleNames="{style.button}" text="{messages.messageBoxWarnMessageBtn}" />
				<g:Button ui:field="errorMessageBtn" addStyleNames="{style.button}" text="{messages.messageBoxErrorMessageBtn}" />
				<g:Button ui:field="helpMessageBtn" addStyleNames="{style.button}" text="{messages.messageBoxHelpMessageBtn}" />
				<g:Button ui:field="yesNoBtn" addStyleNames="{style.button}" text="{messages.messageBoxYesNoBtn}" />
				<g:Button ui:field="yesNoCancelBtn" addStyleNames="{style.button}" text="{messages.messageBoxYesNoCancelBtn}" />
			</g:VerticalPanel>
		</g:west>
	</g:DockLayoutPanel>

</ui:UiBinder>