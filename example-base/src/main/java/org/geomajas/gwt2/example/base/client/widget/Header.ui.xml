<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resource' type='org.geomajas.gwt2.example.base.client.resource.ShowcaseResource' />

	<ui:style>
		.header {
			width: 100%;
			height: 62px;
			position: relative;
			background-color: #F0F0F0;
		}
		
		.headerTitle {
			position: relative;
			float: right;
			margin: 15px 20px 10px 20px;
			font-size: 20px;
			font-weight: bold;
			font-family: Verdana, Arial;
			color: #333333;
		}

		.headerImageDiv {
			float: left;
			position: relative;
			margin-left: 20px;
		}
		
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.header}">
		<div class="{style.headerImageDiv}"><g:Image resource='{resource.geomajasLogoBg}' /></div>
		<div class="{style.headerTitle}">Showcase Client Gwt 2.x</div>
	</g:HTMLPanel>

</ui:UiBinder> 