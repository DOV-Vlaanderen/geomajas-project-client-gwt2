<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.top {
		}
		
		.left {
			float: left;
		}
		
		.gimmeRoom {
			padding-left: 5px;
			white-space: nowrap;
			line-height: 20px;
			font-weight: normal;
		}
	</ui:style>

	<g:FlowPanel addStyleNames="{style.top}">
		<g:Image ui:field="icon" addStyleNames="{style.left}" width="20px" />
		<g:Label ui:field="label" addStyleNames="{style.left} {style.gimmeRoom}" />
	</g:FlowPanel>

</ui:UiBinder> 